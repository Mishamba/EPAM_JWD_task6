<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "Valid suite">
    <test name = "valid addbook commands">
        
        <parameter name="valid command" value="addbook java8 700 mishamba gleck kek"/>
        <parameter name="valid command" value="addbook java116 100005 mishamba gleck kersh"/>
        <parameter name="valid command" value="addbook golangForNoobes 100 shpork chert volk"/>

        <classes>
            <class name = "mishamba.day6.controller.command.impl.AddBookCommandTest">
                <methods>
                    <include name="testExecute_valid"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name = "invalid addbook commands">

        <parameter name="invalid command" value="addbookjava8700mishambagleckkek"/>
        <parameter name="invalid command" value="wtf"/>
        <parameter name="invalid command" value="i've tired to write this"/>
        <parameter name="invalid command" value="addbook java3 mishamba gleck"/>
        
        <classes>
            <class name="mishamba.day6.controller.command.impl.AddBookCommandTest">
                <methods>
                    <include name="testExecute_test"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>